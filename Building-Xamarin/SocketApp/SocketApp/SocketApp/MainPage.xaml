<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocketApp.MainPage">

    <StackLayout Margin="10,20">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Socket App" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
        </Frame>
        <Label Text="Status" FontSize="Title" Padding="30,10,30,10" x:Name="StatusLabel"/>
        <Label Text="*F" FontSize="16" Padding="30,0,30,0"  x:Name="TempLabel"/>

        <Label Text="*" x:Name="PongLabel" />
        <Entry x:Name="PingEntry" />
        <Button Text="Ping" Clicked="PingServer" />
    </StackLayout>

</ContentPage>
