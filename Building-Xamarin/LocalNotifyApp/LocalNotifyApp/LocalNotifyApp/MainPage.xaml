<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalNotifyApp.MainPage">

    <StackLayout x:Name="mainStackLayout">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Local Notification" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Click this button below to trigger an instant notification" FontSize="16" Padding="30,0,30,0"/>
        <Button Text="Trigger Notification" Background="Orange" Margin="30,0,30,0" Clicked="TrgiggerNotification" />

        <Label Text="Enter a time in seconds and schedule a notification" FontSize="16" Padding="30,0,30,0"/>
        <Stepper Margin="30,0,30,0" x:Name="timeStepper" />
        <Button Text="Schedule Notification" BackgroundColor="Green" Margin="30,0,30,0" Clicked="scheduleNotification"/>
    </StackLayout>

</ContentPage>
